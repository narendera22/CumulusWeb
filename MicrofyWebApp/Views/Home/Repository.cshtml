<style type="text/css">
    [data-letters]:before {
        content: attr(data-letters);
        display: inline-block;
        font-size: 1em;
        width: 2.5em;
        height: 2.5em;
        line-height: 2.5em;
        text-align: center;
        border-radius: 50%;
        background: #3498db;
        vertical-align: middle;
        margin-right: 0.5em;
        color: white;
    }

    .bg-info {
        background-color: #ffffff !important;
