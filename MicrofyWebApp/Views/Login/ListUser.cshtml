<script type="text/javascript">
        /* Initialization of datatable */
        $(document).ready(function () {
            $('#tableID').DataTable({});

        });


        $('.togglecheckbox').change(function () {
            $(this).prop('checked');
            var username = $(this).data('username');
            $.ajax({
                type: "GET",
                url: "/Login/ActivateDeactivate",
                data: { "username": username },
                contentType: "application/json; charset=utf-8",
                //dataType: 'json',
                success: function (data) {

                },
                error: function (data) {
                    console.log(JSON.stringify(data));
                }
            });
        });

   $('#UpdateUserList_form').submit(function () {
       var username = $('#first_name').val();
       //var custname = $('#cust_name').val();
       //var projectname = $('#project_name').val();
       var role = $('#role').val();
       var userid = $('#userid').val();
       var status = $(".switch").find("#statusCheck").is(":checked");
       var password = $('#password').val();
    //var Projects = [{
    //    "ProjectName": projectname,
    //    "CustomerName": custname
    //}];

       var $projCus = $('.dynamic-field');
       var prj = [];
       $projCus.each(function (key, value) {
           var Proj = $("#project_name-" + (key + 1)).val();
           var Cust = $("#cust_name-" + (key + 1)).val();
           if (Proj != "") {
               var obj = {};
               obj = {
                   "ProjectName": Proj,
                   "CustomerName": Cust
               };
               prj.push(obj);
           }
       });

    var UserDetails = {
        "username": userid,
        "password": password,
        "fullName": username,
        "userRole": role,
        "isActive": status,
        "projects": prj
       }
       var ActivityTracker = {
           "UserName": userid,
           "ActivityType": "UpdateUser",
           "ActivityDetails": " has successfully modified user details for " +userid
       }

        var redirecturl = "/Login/UpdateUser";
       $.post(redirecturl, { "users": UserDetails, "activityTracker": ActivityTracker }, function (data) {
            var title = "";
            var type = "";
            if (data.statusCode == true) {
                title = "Success!!";
                type = "green";
            }
            else {
                title = "Error!!";
                type = "red";
            }
            $.alert({
                    title: title,
                    content: data.responseMessage,
                    type: type,
                    onAction: function () {
                        window.location.href = '@Url.Action("ListUser","Login")';
                    }
                });
        })
        .fail(function (response) {
           $.alert({
                title: 'Error!!',
                content: response,
                alignMiddle: true,
                type: 'red'
            });
        });
    return false;


});
</script>
