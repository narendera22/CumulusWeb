                <center><h2><b>User Management</b></h2></center>
            </div>
        </div>-->
        <div id="divbreadcrumb" style="padding-bottom:5px;">
            <ol class="breadcrumb breadcrumb-arrow">
                <li class="homelink"><a href="~/Home/Dashboard">Home</a></li>
                <li class=""><a href="#">Settings</a></li>
                <li class="active"><span>Projects</span></li>
            </ol>
        </div>
        <!--HTML table with student data-->
        <table id="tableID" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Customer Name</th>
                    <th>Application Name</th>
                    <th data-orderable="false"></th>
                    <th data-orderable="false" style="border-bottom:0px;"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var p in Model.ProjectsList)
                {
                    <tr>
                        <td>@p.ProjectName</td>
                        <td>@p.CustomerName</td>
                        <td>@p.Application</td>
                        @if (p.AzureTechnologies != null)
                        {
                            <td style="display:none;"> @Html.Raw(Json.Serialize(p.AzureTechnologies))</td>
                        }
                        else
                        {
                            <td style="display:none;"></td>
                        }
                        <td>
