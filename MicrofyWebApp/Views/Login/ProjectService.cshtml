    <div class="modal fade" id="projectEditPopup" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg" style="width:750px;margin:auto;">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLongTitle">Edit Project Details</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="well form-horizontal" action=" " method="post" id="UpdateProjectList_form">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Project Name</label>
                                <div class="col-md-6 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input name="projectname" id="projectname" placeholder="Project Name" class="form-control" required readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Customer Name</label>
                                <div class="col-md-6 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input name="customername" id="customername" placeholder="Customer Name" class="form-control" type="text" required readonly>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label"><span style="color:red;">*</span> Application Name</label>
                                <div class="col-md-6 inputGroupContainer">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
                                        <input name="applicationname" id="applicationname" placeholder="Application Name" class="form-control" type="text" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-4 control-label"><span style="color:red;">*</span>  Services</label>
                                <div class="col-md-8 inputGroupContainer">
                                    <div class="input-group">
                                        <div id="dynamic-Serv-field-1" class=" col-md-12 form-group dynamic-field" style="display:flex;" data-tags="add">
                                            <span class="input-group-addon col-sm-1"><i class="glyphicon glyphicon-briefcase"></i></span>
                                            @*<input name="servicename" id="servicename-1" placeholder="Services" class="col-md-4 form-control" type="text" onkeydown="addser($(this))" required>*@
                                            <select class="col-md-8 form-control selectpicker" name="servicename" id="servicename-1" placeholder="Services" onchange="addser($(this))">
                                                <option value="">Select</option>
                                                @foreach (var val in Model.Services)
                                                {
                                                    <option value="@val">@val</option>
                                                }
                                            </select>
                                            <a href="#" class="add" title="Add Service" style="padding:5px; display:block;" onclick="Viewser(); return false;">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                            <a href="#" class="delete" title="delete Service" style="padding:5px; display:none;" onclick="deleteser($(this)); return false;">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Button -->
                            <div class="form-group">
                                <div class="col-md-7 control-label">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Update</button>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                </div>
