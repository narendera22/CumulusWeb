</html>
<script type="text/javascript">
        /* Initialization of datatable */
        $(document).ready(function () {
            $('#tableID').DataTable({});

        });



    $('#UpdateProjectList_form').submit(function () {

       var projectname = $('#projectname').val();
       var customername = $('#customername').val();
       var applicationname = $('#applicationname').val();

        if (applicationname == "") {
            $.alert({
                title: "Error",
                content: "Enter Application Name",
                type: "red"
            });
            return false;
        }

       var $services = $('.dynamic-field');
       var AzureTechnologies = [];
       $services.each(function (key, value) {
           var servname = $("#servicename-" + (key + 1)).val();
           if (servname != "") {
               var obj = {};
               obj = {
                   "ServiceName": servname
               };
               AzureTechnologies.push(obj);
           }
       });

        if (AzureTechnologies.length <= 0) {
            $.alert({
                title: "Error",
                content: "Enter Services",
                type: "red"
            });
            return false;
        }

    var ProjectDetails = {
        "ProjectName": projectname,
        "CustomerName": customername,
        "Application": applicationname,
        "UserId": "",
        "AzureTechnologies": AzureTechnologies
       }

        var redirecturl = "/Login/UpdateProject";
       $.post(redirecturl, { "project": ProjectDetails }, function (data) {
            var title = "";
            var type = "";
            if (data.statusCode == true) {
                title = "Success!!";
                type = "green";
            }
            else {
                title = "Error!!";
                type = "red";
            }
            $.alert({
                    title: title,
                    content: data.responseMessage,
                    type: type,
                    onAction: function () {
                        window.location.href = '@Url.Action("ProjectService","Login")';
                    }
                });
        })
        .fail(function (response) {
           $.alert({
                title: 'Error!!',
                content: response,
                alignMiddle: true,
                type: 'red'
            });
        });
    return false;


});
</script>
<script type="text/javascript">
    $(function () {
        $("a[class='prjedit']").click(function () {
            debugger;
            var projectname = $(this).closest("tr").find('td:eq(0)').text();
            var customername = $(this).closest("tr").find('td:eq(1)').text();
            var applicationame = $(this).closest("tr").find('td:eq(2)').text();
            var servicename = $(this).closest("tr").find('td:eq(3)').text();
            var json = "";
            if (servicename != "")
                var json = $.parseJSON(servicename);

            $('#projectname').val(projectname);
            $('#customername').val(customername);
            $('#applicationname').val(applicationame);

            $('.dynamic-field').slice(1).remove();
            for (var key = 0; key < json.length; key++) {
                if (key == 0) {
                    $('#servicename-1').val(json[key].serviceName);
                }
                else {
                    Viewser();
                    $('#servicename-' + (key + 1)).val(json[key].serviceName);
                }
            }

            $("#projectEditPopup").modal("show");
            return false;
        });

    });

    var servclassName = ".dynamic-field";
    var servcount = 0;
    var servfield = "";
    var servmaxFields = 10;

    function addser(e) {
        if (sertotalFields() != servmaxFields) {
            if (e.parent().data('tags') === 'hold') { return false; }
            else { e.parent().data('tags', 'hold'); }
            servcount = sertotalFields() + 1;
            servfield = $("#dynamic-Serv-field-1").clone();
            servfield.attr("id", "dynamic-Serv-field-" + servcount);
            servfield.find("#servicename-1").attr("id", "servicename-" + servcount);
            servfield.find('#servicename-' + servcount).removeAttr('required')
            servfield.attr('data-tags', 'add');
            servfield.find("input").val("");
            servfield.find("a.delete").show();
            $(servclassName + ":last").after($(servfield));

        }
    }

    function sertotalFields() {
        return $(servclassName).length;
    }

    function deleteser(e) {
        e.parent().remove();
        servcount = sertotalFields();
        if (servcount <= 1) { $(".dynamic-field").data('tags', 'add'); }
        else {
            $(servclassName + ":last").data('tags', 'add')
        }
        return false;
    }

    function Viewser() {
        if (sertotalFields() != servmaxFields) {
            servcount = sertotalFields() + 1;
            servfield = $("#dynamic-Serv-field-1").clone();
            servfield.attr("id", "dynamic-Serv-field-" + servcount);
            servfield.find("#servicename-1").attr("id", "servicename-" + servcount);
            servfield.attr('data-tags', 'add');
            servfield.find("input").val("");
            servfield.find("a.delete").show();
            $(servclassName + ":last").after($(servfield));

        }
    }
</script>
