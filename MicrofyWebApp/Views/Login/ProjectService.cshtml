<body>
    <div class="container-fluid" style="margin-left:15px;">
        <!--<div class="imglogo" style="display:flex;">-->
        @*<img id="img_logo" alt="Logo" src="~/Image/Cumulus.png" onclick="@("window.location.href='" + @Url.Action("Dashboard", "Home") + "'");" />*@
