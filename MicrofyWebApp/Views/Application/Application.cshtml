                            <td>@p.CustomerName</td>
                            <td>@p.Auditor</td>
                            <td style="display:none;">@String.Join(", ", p.Users.ToArray())</td>
                            <td>@(p.Status!="" ? p.Status : "New")</td>
                            <td>
                                <a href="#" class="btn btn-warning" title="Solution Observation" onclick="@("window.location.href='" + @Url.Action("Audit", "Application", new { projectname=p.ProjectName }) + "' ");">
                                    <span class="glyphicon glyphicon-eye-open" style="font-size:15px;"></span>
                                </a>
                            </td>
                            <td>
                                <a href="#" class="prjedit btn btn-warning" title="Edit Application" onclick="@("window.location.href='" + @Url.Action("EditProject", "Application", new { projectname=p.ProjectName }) + "' ");">
